{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",

    "strictNullChecks": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowJs": true
  },
  "include": [
    "root.d.ts",
    "src/**/*.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "cli/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
